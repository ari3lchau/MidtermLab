<% include ../partials/header.ejs %>

<!-- MAIN CONTENT -->
<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-10">
      <h3>Employee Information</h3>
      <!-- ------------------------ -->
      <!-- FIX THE ADD BUTTON BELOW -->
      <!-- ------------------------ -->
      <a href="/employee-list/add" class="btn btn-primary"
        ><i class="fa fa-plus"></i> Add an employee</a>
      <br />
      <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
          <thead>
            <tr>
              <th>Employee id</th>
              <th class="text-center">Employee name</th>
              <th class="text-center">Department</th>
              <th class="text-center">Designation</th>
              <th class="text-center">Salary</th>
              <th class="text-center"></th>
            </tr>
          </thead>
          <tbody>
            <!-- Template Row -->
            <% for (let count = 0; count < EmployeeList.length; count++) { %>
            <tr>
              <td><%= EmployeeList[count].employeeid %></td>
              <td class="text-center"><%= EmployeeList[count].name %></td>
              <td class="text-center"><%= EmployeeList[count].department %></td>
              <td class="text-center"><%= EmployeeList[count].designation %></td>
              <td class="text-center"><%= EmployeeList[count].salary %></td>
              <td class="text-center">
                <!-- ------------------------ -->
                <!-- ADD the EDIT BUTTON HERE -->
                <!-- ------------------------ -->
                <a href="/employee-list/edit/<%= EmployeeList[count]._id %>" class="btn btn-primary">
                <i class="fas fa-pencil-alt"></i>Edit</a>
              </td>
              <td class="text-center">
                <!-- ------------------------ -->
                <!-- ADD the delete BUTTON HERE -->
                <!-- ------------------------ -->
                <a href="/employee-list/delete/<%= EmployeeList[count].name %>" class="btn btn-primary btn-danger">
                <i class="fas fa-pencil-alt"></i>Delete</a>
              </td>
              
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </main>
    
      <div class="col-md-offset-1 col-md-10 text-center">
        <ul class="pagination pagination-lg pager" id="myPager"></ul>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>
